<%- include('./layouts/header'); -%>
<link rel="stylesheet" href="/css/siswaEdit.css" />
<body>
  <!-- NAV -->
  <%- include('./layouts/navbar'); -%>

  <!-- MAIN -->
  <main>
    <div class="main-sidebar">
      <div class="profile-sidebar">
        <div class="profile-img">
          <img src="" alt="" />
        </div>
        <div class="profile-info">
          <p><b><%= user.username %></b></p>
          <p>Guru</p>
        </div>
      </div>
      <div class="list-sidebar">
        <a href="/">Beranda</a>
        <a href="/siswa" class="selected">Daftar Siswa</a>
        <a href="/ujian">Ujian</a>
        <a href="/nilai">Nilai</a>
      </div>
    </div>

    <div class="main-content">
      <div class="main-background">
        <div class="main-title">
          <h2>Mengubah Data Siswa</h2>
        </div>
        <form id="submit-form" method="post">
          <div class="main-input">
            <label for="">
              Nis <br />
              <input
                class="nama-input"
                required
                type="text"
                name="nis"
                id="nis"
                readonly="true"
              />
              Nama Siswa <br />
              <input
                class="kelas-input"
                required
                type="text"
                name="username"
                id="username"
              />
              <div class="input-side">
                <div class="">
                  Kelas <br />
                  <input
                    class="nama-input"
                    required
                    type="text"
                    name="class"
                    id="class"
                  />
                </div>
                <div class="">
                  Jurusan <br />
                  <input
                    class="kelas-input"
                    required
                    type="text"
                    name="major"
                    id="major"
                  />
                </div>
              </div>
              Ujian <br />
              <div class="exams-assign">
                <p style="color: #358f6c">belum ada ujian terdaftar</p>
              </div>
            </label>
          </div>
          <div class="submit-input">
            <button type="button" id="selesai">Selesai</button>
          </div>
          <div class="submit-layer">
            <div class="submit-question">
              <img src="/img/warning-alt.png" alt="" width="150" />
              <p>Apakah anda sudah yakin ingin menyimpan perubahan ?</p>
              <div class="submit-buttons">
                <button class="ubah-button" type="button">Ubah</button>
                <button class="selesai-button" type="submit">Selesai</button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </main>
</body>
<script src="/js/siswaEdit.js"></script>
<%- include('./layouts/footer'); -%>
