<%- include('./layouts/header'); -%>
<link rel="stylesheet" href="/css/siswaEdit.css" />
<body>
  <!-- NAV -->
  <%- include('./layouts/navbar'); -%>

  <!-- MAIN -->
  <main>
    <%- include('./layouts/adminSidebar'); -%>

    <div class="main-content">
      <div class="main-background">
        <div class="main-title">
          <h2>Mengubah Data Siswa</h2>
        </div>
        <form id="submit-form" method="post">
          <div class="main-input">
            <label for="">
              Nis <br />
              <input
                class="nama-input"
                required
                type="text"
                name="nis"
                id="nis"
                readonly="true"
              />
              Nama Siswa <br />
              <input
                class="kelas-input"
                required
                type="text"
                name="username"
                id="username"
              />
              <div class="input-side">
                <div class="">
                  Kelas <br />
                  <input
                    class="nama-input"
                    required
                    type="text"
                    name="class"
                    id="class"
                  />
                </div>
                <div class="">
                  Jurusan <br />
                  <input
                    class="kelas-input"
                    required
                    type="text"
                    name="major"
                    id="major"
                  />
                </div>
              </div>
              Ujian <br />
              <div class="exams-assign">
                <p style="color: #358f6c">belum ada ujian terdaftar</p>
              </div>
            </label>
          </div>
          <div class="submit-input">
            <button type="button" id="selesai">Selesai</button>
          </div>
          <div class="submit-layer">
            <div class="submit-question">
              <img src="/img/warning-alt.png" alt="" width="150" />
              <p>Apakah anda sudah yakin ingin menyimpan perubahan ?</p>
              <div class="submit-buttons">
                <button class="ubah-button" type="button">Ubah</button>
                <button class="selesai-button" type="submit">Selesai</button>
              </div>
            </div>
          </div>
        </form>
        <div class="complete-layer">
          <div class="complete-background">
            <img src="/img/check.png" width="50" alt="" />
            <p>Data siswa berhasil diubah</p>
            <button type="button" id="complete-upload">OK</button>
          </div>
        </div>
      </div>
    </div>
  </main>
</body>
<%- include('./layouts/footer'); -%>
<script src="/js/siswaEdit.js"></script>
<script>
  $(".siswaSidebar").addClass('selected')
  $('form').bind("keypress", function(e) {
      if (e.keyCode == 13) {               
          e.preventDefault();
          return false;
      }
  });
</script>