<%- include('./layouts/header'); -%>
<link rel="stylesheet" href="/css/examCreate.css" />
<body>
  <!-- NAV -->
  <%- include('./layouts/navbar'); -%>

  <!-- MAIN -->
  <main>
    <%- include('./layouts/adminSidebar'); -%>
    <div class="main-content">
      <div class="main-background">
        <form id="submit-form">
          <div class="main-title">
            <h2>
              Membuat Ujian Baru
              <span style="color: #ff4c4c; font-size: 0.7rem"
                >*harus diisi</span
              >
            </h2>
          </div>
          <div class="main-input">
            <label for="">
              Nama Ujian<span style="color: #ff4c4c"> *</span>
            </label>
            <input
              class="exam-type"
              type="text"
              name="exam_name"
              id=""
              required
              placeholder="masukan nama ujian"
            />
            <label for=""
              >Topik Ujian<span style="color: #ff4c4c"> *</span></label
            >

            <select name="exam_type" class="exam-type" required>
              <option value="">--pilih ujian--</option>
            </select>
            <div class="main-input-config">
              <div class="">
                <label for="">
                  KKM <span style="color: #ff4c4c"> *</span>
                </label>
                <input
                  class="exam-input"
                  type="number"
                  name="kkm_point"
                  id=""
                  value="70"
                  required
                />
              </div>
            </div>
          </div>
          <button class="main-create-question" id="add-question">
            Membuat Soal
          </button>
          <div class="submit-layer">
            <div class="submit-question">
              <img src="/img/warning-alt.png" alt="" width="150" />
              <p>Apakah anda sudah yakin selesai?</p>
              <div class="submit-buttons">
                <button class="ubah-button" type="button">Ubah</button>
                <button class="selesai-button" type="submit">Selesai</button>
              </div>
            </div>
          </div>
          <div class="file-layer">
            <div class="file-toolarge">
              File terlalu besar <br />
              max: 200kb
              <button>Ok</button>
            </div>
          </div>
          <div class="complete-layer">
            <div class="complete-background">
              <img src="/img/check.png" width="50" alt="" />
              <p>Ujian berhasil diunggah</p>
              <button type="button" id="complete-upload">OK</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </main>
</body>
<%- include('./layouts/footer'); -%>
<script src="/js/examCreate.js"></script>
<script>
  $('.ujianSidebar').addClass('selected')
  $('form').bind("keypress", function(e) {
        if (e.keyCode == 13) {               
            e.preventDefault();
            return false;
        }
    });
</script>
