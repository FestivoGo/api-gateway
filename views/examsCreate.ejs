            <label for="">
              Tipe Ujian <br />
              <input class="exam-type" type="text" name="" id="" />
            </label>
            <div class="main-input-config">
              <label for="">
                KKM <br />
                <input class="exam-input" type="number" name="" id="" />
              </label>
              <label for="">
                Max.Percobaan <br />
                <input class="exam-input" type="number" name="" id="" />
              </label>
            </div>
          </div>
          <button class="main-create-question">Membuat Soal</button>
        </div>
      </div>
    </main>
