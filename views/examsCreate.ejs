    <title>Exam Create | Muslim Maya</title>
    <link rel="stylesheet" href="/static/css/examCreate.css" />
  </head>
  <body>
    <!-- NAV -->
    <nav>
      <div class="nav-brand">
        <h2>Muslim Maya</h2>
      </div>
      <div class="nav-list">
        <p><%= new Date().toJSON().slice(0, 10) %></p>
        <a href=""><button>Keluar</button></a>
      </div>
    </nav>

    <!-- MAIN -->
    <main>
      <div class="main-sidebar">
        <div class="profile-sidebar">
