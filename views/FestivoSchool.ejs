<%- include('./layouts/header'); -%>
<body>
  <!-- NAV -->
  <%- include('./layouts/MegaNavbar'); -%>

  <!-- MAIN -->
  <main>
    <%- include('./layouts/MegaSidebar'); -%>
    <section id="sekolah-page" class="h-full bg-white rounded-tl-3xl p-8">
      <div class="flex justify-between">
        <p class="text-main font-bold text-2xl">Daftar Sekolah</p>
        <div class="flex gap-4 mt-5">
          <a id="button-tambah" href="/festivo/schools/create"><button class="bg-main text-white text-sm px-8 py-2 rounded-lg">+ Tambah Sekolah Baru</button></a>
        </div>
      </div>
      <div id="bg-table-sekolah" class="min-h-screen shadow-[0_0px_40px_-15px_rgba(0,0,0,0.2)] w-full mt-8 rounded-3xl p-8 bg-white">
        <form id="form-sekolah-delete">
          <table id="table-sekolah" class="display hidden" style="width: 100%;">
            <thead>
              <tr>
                <th>No.</th>
                <th>ID Sekolah</th>
                <th>Nama Sekolah</th>
                <th>Status</th>
                <th></th>
              </tr>
            </thead>
          </table>
          <div id="bg-nothing" class="text-center">
            <img src="/img/nothing.png" alt="" class="m-auto mt-20">
            <p class="text-sm text-main font-normal">Belum Ada Sekolah Terdaftar</p>
          </div>
        </form>
      </div>
    </section>
  </main>
</body>
<%- include('./layouts/footer'); -%>
<script src="/js/MEGA/FestivoSchool.js"></script>