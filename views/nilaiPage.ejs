<%- include('./layouts/header'); -%>
<link rel="stylesheet" href="/css/nilaiPage.css" />
<body>
  <!-- NAV -->
  <%- include('./layouts/navbar'); -%>
  <p id="user_id" class="hidden"><%= user.id %></p>

  <!-- MAIN -->
  <main>
    <%- include('./layouts/superSidebar'); -%>
    <div class="main-content">
      <div class="main-background">
        <div class="main-title mt-3">
          <p class="text-main font-bold text-2xl mt-3">Nilai Siswa</p>
          <form id="download-form" method="post">
            <a href="/exams/create"><button class="download-csv-button text-sm mt-10" type="submit">Download Data</button></a
            >
          </form>
        </div>
        <div class="filter-option">
          <select id="exams-filter" name="exams-filter" class="min-w-[240px] block px-3 py-2 rounded-lg text-sm border-0 text-white bg-main focus:ring-0 focus:outline-none" id="exams-select">
            <option value="0">Manasik</option>
          </select>
        </div>
        <div class="main-table">
          <div class="main-table-title">
            <table id="siswa-table" class="display" style="width: 100%">
              <thead>
                <tr>
                  <th>No.</th>
                  <th>NIS</th>
                  <th>Nama Siswa</th>
                  <th>Nama Ujian</th>
                  <th>KKM</th>
                </tr>
              </thead>
            </table>
          </div>
          <hr />
          <div class="main-table-body"></div>
        </div>
      </div>
    </div>
  </main>
</body>
<%- include('./layouts/footer'); -%>
<script src="/js/nilaiPage.js"></script>