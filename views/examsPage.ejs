<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Exam Page | Muslim Maya</title>
    <script
      src="https://code.jquery.com/jquery-3.6.4.min.js"
      integrity="sha256-oP6HI9z1XaZNBrJURtCoUT5SUnxFr8s3BzRl+cbzUq8="
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="static/css/examPage.css" />
  </head>
  <body>
    <!-- NAV -->
    <nav>
      <div class="nav-brand">
        <h2>Muslim Maya</h2>
        <!-- <img src="/static/img/logo.png" alt="" width="100px" /> -->
      </div>
      <div class="nav-list">
        <p id="date"></p>
        <a href=""><button>Keluar</button></a>
      </div>
    </nav>

    <!-- MAIN -->
    <main>
      <div class="main-sidebar">
        <div class="profile-sidebar">
          <div class="profile-img">
            <img src="" alt="" />
          </div>
          <div class="profile-info">
            <p><b>Assami Muzaki</b></p>
            <p>Guru</p>
          </div>
        </div>
        <div class="list-sidebar">
          <a href="">Beranda</a>
          <a href="/siswa">Daftar Siswa</a>
          <a href="/ujian" class="selected">Ujian</a>
          <a href="/nilai">Nilai</a>
        </div>
      </div>
      <div class="main-content">
        <div class="main-background">
          <div class="main-title">
            <h2>Daftar Ujian</h2>
            <a href="/ujian/buat"><button>+ Buat Ujian Baru</button></a>
          </div>
          <div class="main-table">
            <div class="main-table-title">
              <p><b>No.</b></p>
              <p><b>Tipe Ujian</b></p>
              <p><b>Nilai KKM</b></p>
              <p><b>Max.Percobaan</b></p>
            </div>
            <hr />
            <div class="main-table-body">
              <img src="/static/img/nothing.png" alt="" />
              <p>Tidak ada ujian</p>
            </div>
          </div>
        </div>
      </div>
    </main>
  </body>
  <script>
    $(document).ready(() => {
      const d = new Date();
      let text;
      // setInterval(() => {
      text = d.toLocaleString("id-ID", {
        dateStyle: "medium",
        // timeStyle: "medium",
      });
      $("#date").html(text);
      // }, 1000);

      const url = "http://localhost:3000/api/exams";
      let datas;
      $.get(url, async (data, status) => {
        if (status == "success") {
          datas = data.payload.datas;
          $("#myTable").DataTable({
            data: datas,
            columns: [
              { data: "exam_type" },
              { data: "kkm_point" },
              { data: "available_try" },
            ],
          });
        }
      });
    });
  </script>
</html>
