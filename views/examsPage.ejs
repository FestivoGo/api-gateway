<%- include('./layouts/header'); -%>
<link rel="stylesheet" href="/css/examPage.css" />
<body>
  <!-- NAV -->
  <%- include('./layouts/navbar'); -%>

  <!-- MAIN -->
  <main>
    <div class="main-sidebar">
      <div class="profile-sidebar">
        <div class="profile-img">
          <img src="" alt="" />
        </div>
        <div class="profile-info">
          <p><b><%= user.username %></b></p>
          <p><%= user.role %></p>
        </div>
      </div>
      <div class="list-sidebar">
        <% if(user.role =="super_admin"){%>
          <a href="/admin">Daftar Admin</a>
          <a href="/siswa">Daftar Siswa</a>
          <a href="/admin/tipe_ujian">Topik Ujian</a>
          <a href="/ujian" class="selected">Ujian</a>
          <a href="/nilai">Nilai</a>
        <%}else{%>
          <a href="/">Beranda</a>
          <a href="/siswa">Daftar Siswa</a>
          <a href="/ujian" class="selected">Ujian</a>
          <a href="/nilai">Nilai</a>
        <%} %>
      </div>
    </div>
    <div class="main-content">
      <div class="main-background">
        <div class="main-title">
          <h2>Daftar Ujian</h2>
          <a href="/ujian/buat"
            ><button class="buat-ujian-baru">+ Buat Ujian Baru</button></a
          >
        </div>
        <div class="main-table">
          <div class="main-table-title">
            <table id="siswa-table" class="display" style="width: 100%">
              <thead>
                <tr>
                  <th>No.</th>
                  <th>Nama Ujian</th>
                  <th>Topik Ujian</th>
                  <th>Nilai KKM</th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>
            </table>
          </div>
          <hr />
          <div class="main-table-body"></div>
        </div>
      </div>
    </div>
  </main>
</body>
<script src="/js/examPage.js"></script>
<%- include('./layouts/footer'); -%>
